<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-12">
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
      <span>Posted by {{post.user.name}} on {{format_date post.created_at}}</span>
    </h2>
  </div>
  <div class="col-12">
    <p>
      {{post.content}}
    </p>
  </div>
</div>
{{/each}}
