
{{#each posts as |post|}}
<div class="post row mb-4">
    <div class="col-12">
        <h2 >
            <a href="/post/{{id}}">{{title}}</a>
        </h2>
            <span>Created on {{format_date created_at}}</span>

    </div>
</div>
{{/each}}

<div class="button-container">
    <a href="api/posts/new"><button class="btn" type="submit">+ New Post</button></a>
</div>